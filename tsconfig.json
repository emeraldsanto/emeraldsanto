{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
	"jsx": "preserve",
	"baseUrl": "./src",
	"paths": {
		"@components/*": ["components/*"],
    "@lib/*": ["lib/*"],
		"@pages/*": ["pages/*"],
		"@styles/*": ["styles/*"]
	}
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
